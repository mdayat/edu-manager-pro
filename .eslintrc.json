{
  "root": true,
  "extends": ["eslint:recommended", "plugin:svelte/recommended", "prettier"],

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },

  "rules": {
    // Adding rules to ignore global function for google auth callback
    "no-unused-vars": ["error", { "varsIgnorePattern": "handleGoogleSignIn" }]
  }
}
